<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Default Title{% endblock %}</title>
    {# <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"> #}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="shortcut icon" href="{{ url_for('static', filename='favicon.ico') }}">

    {% block topscript %}{% endblock %}
    {% block head %}{% endblock %}
</head>

<body>

    <!-- Common Header or Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{url_for('main_page')}}"><img src={{ url_for('favicon') }}></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            {# <a class="nav-link" href="{{ url_for('main_page') }}">Home</a> #}
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Courses
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="{{ url_for('courses_page') }}">All</a></li>
                                <li><hr class="dropdown-divider"></li>
                                {% for course in session['courses'] %}
                                    {% if not session['termid'] or session['termid'] in course[2] %}
                                        <li><a class="dropdown-item" href="{{ url_for('course_page', course_id=course[0])}}">{{ course[1] }}</a></li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </li>   

                        <li class="nav-item">
                            <a class="nav-link" href="{{ url_for('sections_page') }}">Sections</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url_for('problems_page') }}">Problems</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url_for('problemsets_page') }}">ProblemSets</a>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Pull
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="{{ url_for('refresh_all') }}">All Data</a></li>
                                <li><hr class="dropdown-divider"></li>

                                <li><a class="dropdown-item" href="{{ url_for('refresh_cs50') }}">CS50</a></li>
                                <li><a class="dropdown-item" href="{{ url_for('refresh_ps') }}">PowerSchool</a></li>
                                <li><a class="dropdown-item" href="{{ url_for('refresh_gc') }}">Google Classroom</a></li>
                            </ul>
                        </li>   



                        <li class="nav-item nav-link">
                            <form  method="POST" action="{{ url_for('set_term') }}">
                                <select class="form-control-sm" id="term" name="term" onchange="this.form.submit()">
                                    {% if session['termid'] %}
                                        <option value="">Select Term</option>
                                    {% else %}
                                        <option value="" selected>All</option>
                                    {% endif %}

                                    {% for term in session['terms'] %}
                                        {% if session['termid'] and term[0] == session['termid'] %}
                                            <option value="{{ term[0] }}" selected>{{ term[1] }}</option>
                                        {% else %}
                                            <option value="{{ term[0] }}">{{ term[1] }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </form>
                        </li>
                        <li>
                            {% if session['autopull'] %}
                            <a href="{{ url_for('set_autopull') }}">Autopull ON</a>
                            {% else %}
                            <a href="{{ url_for('set_autopull') }}">Autopull OFF</a>
                            {% endif %}

                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        {% block header %}{% endblock %}

        <!-- Common Flash Messages -->
        {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}
        {% for category, message in messages %}
        <div class="{{ category }}">{{ message }}</div>
        {% endfor %}
        {% endif %}
        {% endwith %}
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        {% block sidebar %}{% endblock %}
                    </ul>
                </div>
            </nav>

            <!-- Main Content Area -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                {% include 'breadcrumb.j2' %}
                {% block content %}{% endblock %}
            </main>
        </div>
    </div>

    <!-- Common Footer -->
    <footer>
        {# <p>&copy; 2023 Your Website</p> #}
    </footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    {# <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script> #}
{% block bottomscript %}{% endblock %}
</body>

</html>
